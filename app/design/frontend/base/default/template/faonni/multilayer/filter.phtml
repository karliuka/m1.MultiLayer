<ol>
<?php foreach ($this->getItems() as $_item): ?>
	<?php $selected = $this->isSelected($_item) ?>
	<?php $disabled = $this->isDisabled($_item) ?>
	<?php $url = ($selected) ? $_item->getRemoveUrl() : $_item->getUrl() ?>
    <li>
		<input id="layer-option-<?php echo $_item->getValue() ?>" type="checkbox" class="checkbox layer-option-checkbox" 
			<?php if ($selected): ?> checked="checked" <?php endif ?>
			<?php if ($disabled): ?> disabled="disabled" <?php endif ?>
			<?php if (!$disabled): ?> value="<?php echo $url ?>"<?php endif ?>/>
		<label for="layer-option-<?php echo $_item->getValue() ?>"<?php if ($disabled): ?> class="option-disabled" <?php endif ?>>
			<?php echo $_item->getLabel() ?><?php if ($this->shouldDisplayProductCount()): ?> (<?php echo $_item->getCount() ?>)<?php endif ?>
		</label>
    </li>
<?php endforeach ?>
</ol>
